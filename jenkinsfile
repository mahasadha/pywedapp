pipeline {
    agent any
environment {
        PATH = "C:\\WINDOWS\\SYSTEM32"
}
  
    stages {
        stage('connect') {
            steps {
                    git branch:'main', url:'https://github.com/mahasadha/pywedapp.git'
                }
            }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('mahasadha/newpyapp')
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Run Docker container
                    docker.run('-d --name myapp -p 5000:5000 mahasadha/newpyapp')
                }
            }
        }
    }
}
