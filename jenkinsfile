pipeline {
    agent any
environment {
        PATH = "C:\\WINDOWS\\SYSTEM32; C:\\Program Files\\Docker\\Docker"
        
}
  
    stages {
        stage('connect') {
            steps {
                    git branch:'main', url:'https://github.com/mahasadha/pywedapp.git'
                }
            }
        stage('Build Docker Image') {
            steps {
                script {
                    bat 'C:\\Program Files\\Docker\\Docker\\docker build -t mahasadha/newpyapp .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Run Docker container
                    bat 'C:\\Program Files\\Docker\\Docker\\docker run -d --name myapp -p 5000:5000 mahasadha/newpyapp'
                }
            }
        }
    }
}
